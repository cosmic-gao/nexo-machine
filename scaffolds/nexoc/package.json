{
  "name": "nexoc",
  "version": "0.1.0",
  "description": "Nexoc CLI - A powerful scaffolding tool with lifecycle, pipeline, hooks and adapter pattern",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "bin": {
    "nexoc": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    },
    "./types": {
      "types": "./src/types.ts",
      "import": "./src/types.ts"
    }
  },
  "scripts": {
    "build": "tsup"
  },
  "dependencies": {
    "@nexoc/types": "workspace:*",
    "@nexoc/core": "workspace:*",
    "@nexoc/hooks": "workspace:*",
    "@nexoc/lifecycle": "workspace:*",
    "@nexoc/pipeline": "workspace:*",
    "@nexoc/adapters": "workspace:*",
    "@nexoc/commands": "workspace:*",
    "citty": "^0.1.6"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "license": "MIT"
}
